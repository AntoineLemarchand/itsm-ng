<nav class="nav-side-menu">

    <div class="menu-list">
  
        <ul id="menu-content" class="menu-content collapse out">

{% for menu_name, data in menu|filter(data => data['show_menu']) %}

            <li title="{{data['title']}}" id='menu-{{menu_name}}' class='menu {{data['class']}}' > {# loop.index starts at 1 mettre active bone page #}
                <a class="{{menu[menu_name]['is_open'] ?: 'collapsed'}} " onclick="openMenu(this, '{{menu_name}}')" data-toggle="collapse" data-target="#submenu-{{menu_name}}">
                    <i class="bubble-icon fas {{menu[menu_name]['icon']}}"></i>
                    <span>{{data['title']}}</span>
                    {# {% if menu_name == 'favorite' %}
                    <div id="menu-favorite-button" onclick="activateFavoriteMode(event)">
                        <i class="fas fa-cog"></i>
                    </div>
                    {% endif %} #}
                </a>


            
    {% if data['show_sub_menu'] %}

            <ul class="sub-menu ssmenu collapse {{menu[menu_name]['is_open'] ? 'show'}}" id='submenu-{{menu_name}}'>

        {% if menu_name == 'favorite' %}

                <p>You can add your favorite section to this menu. To do this click on the cogwheel then click and the star next to the menu you wish to add as a favorite.</p>
            {% for menu_name, data in menu|filter(data => data['show_menu']) %}
                {% for sub_menu_name,val in data['content']|filter(val => val['show_sub_menu']) %}
                    {% if val['is_favorite'] %}

                    <a  href="{{root_doc}}{{val['page']}}" {{val['shortcut_attr']|raw}} id='favorite-section-{{sub_menu_name}}' class="{{val['is_favorite'] ? 'section-favorite'}} {{menu[val['part']]['content'][sub_menu_name]['sub_menu_class']}}">
                        <i class='submenu-icon fa-fw {{val['icon']}}'></i>
                        <span>{{val['title']}}</span>
                        <i class="star-icon" onclick="addFavorite(event, this, '{{menu_name}}', '{{sub_menu_name}}')"></i>
                    </a>

                    {% endif %}
                {% endfor %}
            {% endfor %}
        {% endif %}
        {% for sub_menu_name,val in data['content']|filter(val => val['show_sub_menu']) %}
                    <a  href="{{root_doc}}{{val['page']}}" {{val['shortcut_attr']|raw}} id='section-{{sub_menu_name}}' class="{{val['is_open'] ? 'show'}} {{val['is_favorite'] ? 'section-favorite'}} {{menu[val['part']]['content'][sub_menu_name]['sub_menu_class']}}">
                        <i class='submenu-icon fa-fw {{val['icon']}}'></i>
                        <span>{{val['title']}}</span>
                        <i class="star-icon" onclick="addFavorite(event, this, '{{menu_name}}', '{{sub_menu_name}}')"></i>
                    </a>

        {% endfor %}

            </ul>
        </li>
    {% endif %}
{% endfor %}

        </ul>
    </div>
</nav>