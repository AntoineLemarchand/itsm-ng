<h3>Checking of the compatibility of your environment with the execution of GLPI</h3>
<div class="tab_check">
    <table class="tab_check" data-search="true" data-toolbar="#toolbar" data-toggle="table" data-show-export="true">
        <thead>
        <tr>
            <th data-field="test">Test done</th>
            <th data-sortable="true" data-field="result">Results</th>
        </tr>
        </thead>
        <tbody>
            {% for requirement in requirements %}
                <tr>
                    <td>{{requirement.title}}</td>
                    <td>
                        {% if requirement.validated %}
                            <i class="fas fa-check"></i>
                        {% else %}
                            {% if requirement.required %}
                                <i class="fas fa-exclamation-triangle"></i>
                            {% else %}
                                <i class="fas fa-times"></i>
                            {% endif %}
                            <p>{{requirement.message}}</p>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
        </tbody>
    </table>
</div>
    <h3>Do you want to continue?</h3>
    {% if passed == 0 %} {# 0 is good, 1 is missing optional, 2 is missing required #}
        <div class="buttons">
            <form action="install.php?step=1" method="post">
                <button type="submit">Continue</button>
            </form>
        </div>
    {% elseif passed == 1 %}
            <div class="buttons">
                <form action="install.php?step=0" method="post">
                    <button class="btn btn-primary btn-lg" type="submit">Try again</button>
                </form>
                <form action="install.php?step=1" method="post">
                    <button class="btn btn-primary btn-lg" type="submit">Continue</button>
                </form>
            </div>
    {% else %}
        <div class="buttons">
            <form action="install.php?step=0" method="post">
                <button class="btn btn-primary btn-lg" type="submit">Try again</button>
            </form>
        </div>
    {% endif %}