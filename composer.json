{
    "name": "itsmng/itsmng",
    "description": "ITSM-NG dependencies",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "homepage": "https://www.itsm-ng.org/",
    "support": {
        "issues": "https://github.com/itsmng/itsm-ng/issues",
        "docs": "https://wiki.itsm-ng.org/"
    },
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mysqli": "*",
        "ext-simplexml": "*",
        "ext-zlib": "*",
        "blueimp/jquery-file-upload": "^10.2",
        "elvanto/litemoji": "^4.3",
        "guzzlehttp/guzzle": "^7.8",
        "guzzlehttp/psr7": "^2.6",
        "htmlawed/htmlawed": "^1.2",
        "iamcal/lib_autolink": "^1.7",
        "jumbojett/openid-connect-php": "^0.9.6",
        "laminas/laminas-cache": "^2.8",
        "laminas/laminas-i18n": "^2.10",
        "laminas/laminas-mail": "^2.12",
        "laminas/laminas-mime": "^2.7",
        "laminas/laminas-serializer": "^2.8",
        "mexitek/phpcolors": "^1.0.0",
        "michelf/php-markdown": "^2",
        "monolog/monolog": "^2.0",
        "paragonie/sodium_compat": "^1.14",
        "phpmailer/phpmailer": "^6.0",
        "psr/log": "^1.1",
        "psr/simple-cache": "^1.0",
        "ramsey/uuid": "^4.0",
        "rlanvin/php-rrule": "^2.1",
        "sabre/dav": "^4.4",
        "sabre/http": "^5.0",
        "sabre/uri": "^2.0",
        "sabre/vobject": "^4.5",
        "scssphp/scssphp": "^1.11",
        "sebastian/diff": "^4.0",
        "simplepie/simplepie": "^1.8",
        "symfony/console": "^5.0",
        "tecnickcom/tcpdf": "^6.2",
        "twig/twig": "^3.0",
        "wapmorgan/unified-archive": "^1.0"
    },
    "require-dev": {
        "ext-xml": "*",
        "atoum/atoum": "^4.1",
        "consolidation/robo": "^2.0",
        "maglnet/composer-require-checker": "^2.0",
        "mikey179/vfsstream": "^1.6",
        "natxet/cssmin": "^3.0",
        "php-parallel-lint/php-parallel-lint": "^1.1",
        "pestphp/pest": "^1.23"
    },
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-idn": "*",
        "symfony/polyfill-php72": "*"
    },
    "suggest": {
        "ext-ldap": "Used to provide LDAP authentication and synchronization",
        "ext-sodium": "Used to provide strong encryption for sensitive data in database"
    },
    "config": {
	     "optimize-autoloader": true,
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true,
        "allow-plugins": {
            "ocramius/package-versions": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test:db": "php vendor/bin/atoum -p 'php -d memory_limit=512M' --debug --force-terminal --use-dot-report --bootstrap-file tests/bootstrap.php --no-code-coverage --max-children-number 1 -d tests/database",
        "test:function": "php vendor/bin/atoum -p 'php -d memory_limit=512M' --debug --force-terminal --use-dot-report --bootstrap-file tests/bootstrap.php --no-code-coverage --max-children-number 1 -d tests/functionnal/",
        "test:units": "php vendor/bin/atoum -p 'php -d memory_limit=512M' --debug --force-terminal --use-dot-report --bootstrap-file tests/bootstrap.php --no-code-coverage -d tests/units",
        "test:web": "php vendor/bin/atoum -p 'php -d memory_limit=512M' --debug --force-terminal --use-dot-report --bootstrap-file tests/bootstrap.php --no-code-coverage --max-children-number 1 -d tests/web",
        "test:ldap": "php vendor/bin/atoum -p 'php -d memory_limit=512M' --debug --force-terminal --use-dot-report --bootstrap-file tests/bootstrap.php --no-code-coverage --max-children-number 1 -d tests/LDAP",
        "test:imap": "php vendor/bin/atoum -p 'php -d memory_limit=512M' --debug --force-terminal --use-dot-report --bootstrap-file tests/bootstrap.php --no-code-coverage --max-children-number 1 -d tests/imap",
        "test:csp": "vendor/bin/phpcs --parallel=500 --cache -p --extensions=php --standard=vendor/glpi-project/coding-standard/GlpiStandard/ --ignore=\"/.git/,^$(pwd)/(config|files|lib|marketplace|node_modules|plugins|tests/config|vendor)/\" ./",
        "test:cs": "vendor/bin/phpcs -d memory_limit=512M --cache -p --extensions=php --standard=vendor/glpi-project/coding-standard/GlpiStandard/ --ignore=\"/.git/,^$(pwd)/(config|files|lib|marketplace|node_modules|plugins|tests/config|vendor)/\" ./",
        "test:lint": "vendor/bin/parallel-lint  --exclude files --exclude marketplace --exclude plugins --exclude vendor --exclude tools/vendor .",
        "server": "php -S localhost:8000",
        "post-install-cmd": [
            "@php -r \"file_put_contents('.composer.hash', sha1_file('composer.lock'));\"",
            "patch -f -p1 -d vendor/laminas/laminas-mail/ < tools/laminas-mail-128.patch || echo 'Error applying patch, retrieving some mail attachement could fail'"
        ],
        "post-update-cmd": [
            "@php -r \"file_put_contents('.composer.hash', sha1_file('composer.lock'));\"",
            "patch -f -p1 -d vendor/laminas/laminas-mail/ < tools/laminas-mail-128.patch || echo 'Error applying patch, retrieving some mail attachement could fail'"
        ]
    },
    "repositories": {
        "htmlawed": {
            "type": "composer",
            "url": "https://www.bioinformatics.org/phplabware/downloads/"
        }
    }
}
